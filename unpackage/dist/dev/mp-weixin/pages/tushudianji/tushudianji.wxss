
/* 基础样式 */
.container.data-v-7f52b642 {
  position: relative;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 状态栏（统一方法） */
.status-bar.data-v-7f52b642 {
  width: 100%;
  background-color: #ffffff; /* 与导航栏同色 */
}

/* 导航栏 */
.custom-nav.data-v-7f52b642 {
  height: 50px;
  display: flex;
  align-items: center;
  padding: 0 16px;
  background-color: #00a651;
  position: -webkit-sticky;
  position: sticky;
  top: var(--status-bar-height);
  z-index: 10;
}
.back-btn.data-v-7f52b642 {
  font-size: 24px;
  color: white;
  margin-right: 12px;
}
.back-btn--hover.data-v-7f52b642 {
  opacity: 0.8;
}
.nav-center.data-v-7f52b642 {
  flex: 1;
  text-align: center;
  font-size: 18px;
  font-weight: 600;
  color: white;
}
.nav-right.data-v-7f52b642 {
  display: flex;
  align-items: center;
  gap: 15px;
}

/* 搜索框 */
.search-container.data-v-7f52b642 {
  padding: 15px;
  background-color: #00a651;
  position: -webkit-sticky;
  position: sticky;
  top: calc(var(--status-bar-height) + 50px);
  z-index: 9;
}
.search-box.data-v-7f52b642 {
  height: 36px;
  background: white;
  border-radius: 18px;
  display: flex;
  align-items: center;
  padding: 0 15px;
}
.search-icon.data-v-7f52b642 {
  margin-right: 8px;
}
.search-input.data-v-7f52b642 {
  flex: 1;
  height: 100%;
  font-size: 14px;
  color: #333;
}

/* 内容区 */
.content-wrapper.data-v-7f52b642 {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}
.content-scroll.data-v-7f52b642 {
  height: 100%;
}
.content-container.data-v-7f52b642 {
  display: flex;
  min-height: 100%;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 左侧导航 */
.left-nav.data-v-7f52b642 {
  width: 85px;
  background: white;
  padding-top: 10px;
}
.nav-item.data-v-7f52b642 {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12px 0;
  margin-bottom: 5px;
  color: #666;
}
.nav-item.active.data-v-7f52b642 {
  background: #f0f7f3;
  border-radius: 0 15px 15px 0;
  color: #00a651;
}
.nav-icon.data-v-7f52b642 {
  width: 28px;
  height: 28px;
  margin-bottom: 5px;
}
.nav-img.data-v-7f52b642 {
  width: 100%;
  height: 100%;
}
.nav-text.data-v-7f52b642 {
  font-size: 12px;
}

/* 书籍列表 */
.book-list.data-v-7f52b642 {
  flex: 1;
  padding: 10px 15px 10px 5px;
}
.book-item.data-v-7f52b642 {
  display: flex;
  background: white;
  border-radius: 8px;
  padding: 12px;
  margin-bottom: 12px;
  box-shadow: 0 1px 6px rgba(0,0,0,0.05);
}
.book-cover.data-v-7f52b642 {
  width: 80px;
  height: 110px;
  border-radius: 4px;
  background: #eee;
}
.book-info.data-v-7f52b642 {
  flex: 1;
  margin-left: 12px;
}
.book-title.data-v-7f52b642 {
  font-size: 16px;
  font-weight: 600;
  color: #333;
  margin-bottom: 6px;
  display: block;
}
.book-author.data-v-7f52b642, 
.book-publisher.data-v-7f52b642 {
  font-size: 12px;
  color: #999;
  margin-bottom: 4px;
  display: block;
}
.book-desc.data-v-7f52b642 {
  font-size: 13px;
  color: #666;
  margin-top: 8px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
